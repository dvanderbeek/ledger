- accounts.each do |account, children|
  %tr
    %td
      %span{style: "padding-left: #{15 * account.ancestry_depth}px;"}
        = account.name.titleize
    %td= account.type.demodulize
    %td= number_to_currency (params[:product].present? ? account.balance(for_product: params[:product]) : account.balance_cents) / 100
    %td= link_to 'Edit', edit_account_path(account)
    %td= link_to 'Destroy', account_path(account), :method => :delete, :data => { :confirm => 'Are you sure?' }
  = render 'table', accounts: children if children.present?
